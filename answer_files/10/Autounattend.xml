                </SynchronousCommand>

                <SynchronousCommand wcm:action="add">
                    <CommandLine>cmd.exe /c powershell -Command "Get-AppxPackage *OneNote* | Remove-AppxPackage"</CommandLine>
                    <Order>34</Order>
